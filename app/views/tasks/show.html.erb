<div class="container">

  <h1><%= @task.title %></h1>

  <div>
    <%= @task.details %>
  </div>

  <% if @task.completed? %>
    <p class="far fa-check-square">This task is completed</p>
    <% else %>
    <p class="far fa-square">This task is not completed yet</p>
  <% end %>


  <p>
    <i class="fas fa-undo"> </i><%= link_to ' Back to list', tasks_path %>
  </p>

  <button>
    <%= link_to 'Edit this task', edit_task_path %>
  </button>

</div>

